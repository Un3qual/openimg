<h1 class="title">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <div class="control">
    <%= f.label :username, class: "label is-large" %>
    <%= f.text_field :username, placeholder: "Username", autofocus: true, class: "input is-large" %>
  </div>

  <div class="control">
    <%= f.label :password, class: "label is-large" %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "input is-large" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Login", class: "button is-large is-primary" %>
  </div>
<% end %>

